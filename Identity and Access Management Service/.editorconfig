# C# files
[*.cs]
# Indentation and spacing
indent_style = space
indent_size = 4
tab_width = 4

# Newline preferences
end_of_line = lf
insert_final_newline = true

# Code style settings
csharp_style_var_for_built_in_types = true
csharp_style_var_when_type_is_apparent = true
csharp_style_var_elsewhere = false

csharp_style_qualification_for_field = false
csharp_style_qualification_for_property = false
csharp_style_qualification_for_method = false
csharp_style_qualification_for_event = false

dotnet_style_qualification_for_field = false
dotnet_style_qualification_for_property = false
dotnet_style_qualification_for_method = false
dotnet_style_qualification_for_event = false

# Naming conventions
dotnet_naming_rule.interface_should_be_prefixed_with_i.severity = suggestion
dotnet_naming_rule.interface_should_be_prefixed_with_i.symbols = interface
dotnet_naming_rule.interface_should_be_prefixed_with_i.style = prefixed_interface

dotnet_naming_style.prefixed_interface.required_prefix = I
dotnet_naming_style.prefixed_interface.capitalization = pascal_case

# using directive preferences
csharp_using_directive_placement = inside_namespace
csharp_prefer_simple_using_statement = true

# Expression-bodied members
csharp_style_expression_bodied_methods = false
csharp_style_expression_bodied_constructors = false
csharp_style_expression_bodied_operators = false
csharp_style_expression_bodied_properties = false
csharp_style_expression_bodied_indexers = false
csharp_style_expression_bodied_accessors = false
csharp_style_expression_bodied_lambdas = true
csharp_style_expression_bodied_local_functions = false

# Code cleanup
[*.{cs,vb}]
dotnet_sort_system_directives_first = true
csharp_preferred_modifier_order = public,private,protected,internal,static,extern,new,virtual,abstract,sealed,override,readonly,unsafe,volatile,async

# Null checking preferences
csharp_style_throw_expression = true
csharp_style_conditional_delegate_call = true

# Code analysis rules
dotnet_analyzer_diagnostic.category-Style.severity = warning
dotnet_analyzer_diagnostic.category-CodeQuality.severity = warning
dotnet_analyzer_diagnostic.category-Performance.severity = warning
dotnet_analyzer_diagnostic.category-Security.severity = warning