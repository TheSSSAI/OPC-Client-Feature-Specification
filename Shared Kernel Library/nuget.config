<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <packageSources>
    <!-- The official NuGet feed -->
    <add key="nuget.org" value="https://api.nuget.org/v3/index.json" protocolVersion="3" />
    
    <!-- 
      Uncomment and configure the line below to use a private NuGet feed for internal packages.
      This is a common practice in enterprise environments to host proprietary libraries 
      or approved versions of third-party packages.
    -->
    <!-- <add key="PrivateFeed" value="https://pkgs.dev.azure.com/YourOrganization/_packaging/YourFeed/nuget/v3/index.json" /> -->
  </packageSources>
  <packageSourceMapping>
    <!-- 
      Optional: Use package source mapping to specify which packages should be restored from which source.
      This improves security and restore performance.
    -->
    <packageSource key="nuget.org">
      <package pattern="*" />
    </packageSource>
    <!--
    <packageSource key="PrivateFeed">
      <package pattern="YourCompany.*" />
    </packageSource>
    -->
  </packageSourceMapping>
</configuration>