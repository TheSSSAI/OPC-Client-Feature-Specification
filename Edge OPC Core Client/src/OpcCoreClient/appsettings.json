{
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning",
        "Grpc": "Information"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3}] {Message:lj} <s:{SourceContext}>{NewLine}{Exception}"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "logs/opc-client-.log",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 7,
          "fileSizeLimitBytes": 10485760,
          "rollOnFileSizeLimit": true,
          "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} [{Level:u3}] ({SourceContext}) {Message:lj}{NewLine}{Exception}"
        }
      }
    ],
    "Enrich": [
      "FromLogContext",
      "WithMachineName",
      "WithThreadId"
    ]
  },
  "ClientInfo": {
    "ClientId": "CHANGE_ME_IN_PROD_OR_USE_ENV_VAR",
    "TenantId": "CHANGE_ME_IN_PROD_OR_USE_ENV_VAR",
    "RegistrationToken": "IF_NEEDED_FOR_PROVISIONING"
  },
  "Opc": {
    "PrimaryServerEndpoint": "opc.tcp://localhost:4840",
    "BackupServerEndpoint": "",
    "SecurityPolicy": "Basic256Sha256",
    "MessageSecurityMode": "SignAndEncrypt",
    "Username": "user1",
    "Password": "password1",
    "PollingIntervalSeconds": 5,
    "Tags": [
      // Example tags - configure as needed
      "ns=2;s=Device1.Temperature",
      "ns=2;s=Device1.Pressure",
      "ns=2;s=Device2.Status"
    ]
  },
  "Mqtt": {
    "BrokerAddress": "localhost",
    "BrokerPort": 1883,
    "UseTls": false,
    "ClientCertPath": "certs/client.pfx",
    "ClientCertPassword": "your_password"
  },
  "Grpc": {
    "Endpoint": "https://localhost:5001",
    "ClientCertPath": "certs/client.pfx",
    "ClientCertPassword": "your_password",
    "CaCertPath": "certs/ca.crt"
  },
  "Buffer": {
    "BufferFilePath": "data/buffer.bin",
    "MaxBufferSizeMb": 1024,
    "MaxBufferAgeHours": 24
  },
  "EdgeAI": {
    "ModelPath": "models/anomaly_detector_v1.onnx",
    "ExecutionProvider": "CPU"
  },
  "AllowedHosts": "*"
}