{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/AssetTopology.sln",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "publish",
            "command": "dotnet",
            "type": "process",
            "args": [
                "publish",
                "${workspaceFolder}/src/AssetTopology.Api/AssetTopology.Api.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "watch",
            "command": "dotnet",
            "type": "process",
            "args": [
                "watch",
                "run",
                "--project",
                "${workspaceFolder}/src/AssetTopology.Api/AssetTopology.Api.csproj"
            ],
            "problemMatcher": "$msCompile"
        },
		{
			"label": "docker-run: debug",
			"type": "docker-run",
			"dependsOn": [
				"docker-build: debug"
			],
			"dockerRun": {
                "env": {
                    "ASPNETCORE_ENVIRONMENT": "Development",
                    "ASPNETCORE_URLS": "http://+:8080"
                }
            },
			"netCore": {
				"appProject": "${workspaceFolder}/src/AssetTopology.Api/AssetTopology.Api.csproj",
				"enableDebugging": true
			}
		},
		{
			"label": "docker-build: debug",
			"type": "docker-build",
			"netCore": {
				"appProject": "${workspaceFolder}/src/AssetTopology.Api/AssetTopology.Api.csproj",
				"buildConfiguration": "Debug",
				"containerName": "assettopologyapi-debug",
				"context": "${workspaceFolder}",
				"dockerfile": "${workspaceFolder}/src/AssetTopology.Api/Dockerfile"
			}
		}
    ]
}